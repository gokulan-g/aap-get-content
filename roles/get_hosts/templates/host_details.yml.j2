###############################################################################
# auto-generated by aap-get-content
# total_hosts: {{ host_list | length }}
# Ansible Automation Platform: https://{{ aap_hostname }}
# AAP Job ID: {{ tower_job_id }}
# Git User ID: {{ github_user_info.json.login }}
###############################################################################
---
controller_hosts:
{% for host_item in host_list %}
- name: {{ host_item.name }}
  description: {{ host_item.description | default('') |  to_json(ensure_ascii=False) }}
  inventory: "{{ host_item.summary_fields.inventory.name }}"
{% if host_item.variables is defined and host_item.variables  and host_item.variables != '{}'%}
  variables: 
{% set parsed_variables = host_item.variables | default('') | from_yaml %}
    {{ parsed_variables | to_nice_yaml | indent(4) }}{% endif %}
  enabled: {{ host_item.enabled }}
  state: present	# change state to absent to delte the host

{% endfor %}