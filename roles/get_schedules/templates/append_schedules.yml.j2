###############################################################################
# auto-generated by aap-get-content
# total_schedules: {{ schedule_list | length }}
# Ansible Automation Platform: https://{{ aap_hostname }}
# AAP Job ID: {{ tower_job_id }}
# Git User ID: {{ github_user_info.json.login }}
###############################################################################
---
controller_schedules:
{% for schedule in schedule_list %}
 - name: {{ schedule.name }}
   description: {{ schedule.description | default('') | to_json(ensure_ascii=False) }}
   unified_job_template: {{ schedule.unified_job_template }}
   rrule: {{ schedule.rrule }}
{% if schedule.extra_data is defined and schedule.extra_data %}
   extra_data:
{% set parsed_variables = schedule.extra_data | from_yaml %}
     {{ schedule.extra_data | to_nice_yaml | indent(5) -}}
{% endif %}
{% if schedule.verbosity is defined and schedule.verbosity %}
   verbosity: {{ schedule.verbosity }}
   state: present # change the state to absend to delete the schedule
{% endif %}

{% endfor %}