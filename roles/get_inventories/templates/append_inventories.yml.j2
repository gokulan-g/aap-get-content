###############################################################################
# auto-generated by aap-get-content
# total_inventories: {{ inventory_list | length }}
# Ansible Automation Platform: https://{{ aap_hostname }}
# AAP Job ID: {{ tower_job_id }}
# Git User ID: {{ github_user_info.json.login }}
###############################################################################
---
controller_inventories:
{% for inventory in inventory_list %}
- name: {{ inventory.name | to_json(ensure_ascii=False) }}
  organization: "{{ inventory.organization }}"
  description: {{ inventory.description | default('') | to_json(ensure_ascii=False) }}
{% if inventory.variables is defined and inventory.variables != '' and inventory.variables != '---' %}
  variables:
{% set parsed_variables = inventory.variables | from_yaml %}
    {{ parsed_variables | to_nice_yaml | indent(4) }}{% endif %}
{% if inventory.kind is defined and inventory.kind != '' %}
  kind: "{{ inventory.kind }}"
{% endif %}
{% if inventory.host_filter is defined and inventory.host_filter %}
  host_filter: "{{ inventory.host_filter }}"
{% endif %}
  state: present	# change state to absent to delete the inventory and all its hosts

{% endfor %}