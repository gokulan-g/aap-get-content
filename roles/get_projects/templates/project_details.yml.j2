  scm_type: "{{ project.scm_type }}"
{% endif %}
{% if project.scm_url is defined and project.scm_url %}
  scm_url: "{{ project.scm_url }}"
{% endif %}
{% if project.credential is defined and project.credential %}
  credential: "{{ project.credential }}"
{% endif %}
{% if project.scm_branch is defined and project.scm_branch %}
  scm_branch: "{{ project.scm_branch }}"
{% endif %}
{% if project.scm_refspec is defined and project.scm_refspec %}
  scm_refspec: "{{ project.scm_refspec }}" 
{% endif %}
{% if project.scm_clean is defined and project.scm_clean %}
  scm_clean: "{{ project.scm_clean }}"
{% endif %}
{% if project.scm_delete_on_update is defined %}
  scm_delete_on_update: "{{ project.scm_delete_on_update }}"
{% endif %}
{% if project.scm_track_submodules is defined %}
  scm_track_submodules: "{{ project.scm_track_submodules }}"
{% endif %}
{% if project.scm_update_on_launch is defined %}
  scm_update_on_launch: "{{ project.scm_update_on_launch }}"
{% endif %}
{% if project.scm_update_cache_timeout is defined %}
  scm_update_cache_timeout: "{{ project.scm_update_cache_timeout }}"
{% endif %}
{% if project.allow_override is defined and project.allow_override %}
  allow_override: "{{ project.allow_override }}"
{% endif %}
{% if project.timeout is defined and project.timeout %}
  timeout: "{{ project.timeout }}"
{% endif %}
{% if project.custom_virtualenv is defined and project.custom_virtualenv %}
  custom_virtualenv: "{{ project.custom_virtualenv }}"
{% endif %}
{% if project.organization is defined %}
  organization: "{{ project.organization }}"
{% endif %}
{% if project.wait is defined %}
  wait: "{{ project.wait }}"
{% endif %}
{% if project.update_project is defined %}
  update_project: "{{ project.update_project }}"
{% endif %}
{% if project.interval is defined %}
  interval: "{{ project.interval }}"
{% endif %}
{% if project.notification_templates_started is defined %}
  notification_templates_started:
{% for notification_template in project.notification_templates_started %}
      - {{ notification_template }}
{% endfor %}
{% endif %}
{% if project.notification_templates_success is defined %}
  notification_templates_success:
{% for notification_template in project.notification_templates_success %}
      - {{ notification_template }}
{% endfor %}
{% endif %}
{% if project.notification_templates_error is defined %}
  notification_templates_error:
{% for notification_template in project.notification_templates_error %}
      - {{ notification_template }}
{% endfor %}
{% endif %}
  state: present

{% endfor %}