###############################################################################
# auto-generated by aap-get-roles
# total_roles: {{ list_final_content_roles | length }}
# Ansible Automation Platform: https://{{ aap_hostname }}
# AAP Job ID: {{ tower_job_id }}
# Git User ID: {{ github_user_info.json.login }}
###############################################################################
---
controller_roles:
{% for role in list_final_content_roles %}
{% if role.job_templates is defined %}
  - job_templates:
{% for job_template in role.job_templates %}
      - {{ job_template }}
{% endfor %}
{% elif role.workflows is defined %}
  - workflows:
{% for workflows in role.workflows %}
      - {{ workflow }}
{% endfor %}
{% elif role.projects is defined %}
  - projects:
{% for project in role.projects %}
      - {{ project }}
{% endfor %}
{% endif %}
{% if role.team is defined %}
    team: {{ role.team }}
{% elif role.user is defined %}
    user: {{ role.user }}
{% endif %}
{% if role.roles is defined %}
    roles:
{% for each_role in role.roles %}
      - {{ each_role }}
{% endfor %}
{% endif %}
{% if role.state is defined %}
    state: {{ role.state }}
{% endif %}

{% endfor %}